<!-- Start Top Bar -->
<div class="top-bar text-center" id="top">
    <div class="container">
        <div class="row">
          <div class="col-md-4 bar-info mt-2" dir="ltr">
            <i class="fas fa-shopping-cart f-co" data-toggle="modal" data-target="#cart"></i>
            <!-- Modal -->
            <div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Shopping Cart</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body" dir="rtl">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img src="https://via.placeholder.com/80x80.png" class="img-fluid" alt="...">
                            </a>
                        </div>

                        <div class="media-body">
                            <h5 class="media-heading">Lorem Ipsum</h5>
                            <p>1 × 250.00 EGP</p>
                        </div>
                    </div> <!-- /Media-->
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-two"><a href="checkout.html">Checkout</a></button>
                  </div>
                </div>
              </div>
            </div>

            <i class="fas fa-envelope f-co"></i> <span class="w-email">info@weekendtripss.com</span>
          </div>
          <div class="col-md-4 mt-1 d-none d-md-block">
            <form>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-search f-co"></i></div>
                </div>
                <input type="search" class="form-control" id="inlineFormInputGroup1">
              </div>
            </form>
          </div>
          <div class="col-md-4 bar-info" dir="ltr">
            <select class="selectpicker" onchange="location = this.value;" data-width="fit" data-title="Lang">
              <option value="../ar/index.html">عربي</option>
              <option value="index.html">English</option>
            </select>

            <i class="fab fa-twitter f-co"></i>
            <i class="fas fa-phone-alt f-co"></i> <span class="w-email">0501335104</span>
          </div>

          <!-- For Mobile Only -->
          <div class="col-md-4 d-block d-md-none">
            <form>
              <div class="input-group ">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-search f-co"></i></div>
                </div>
                <input type="search" class="form-control" id="inlineFormInputGroup2">
              </div>
            </form>
          </div>

        </div> <!-- /Row -->
    </div> <!-- /Container -->
</div> <!-- /Top Bar -->
<!-- End Top Bar -->
<!-- Start Logo -->
<div class="nav-logo">
  <div class="container">
    <div class="logo-img m-2">
      <%= image_tag("logo.png", class: 'img-fluid hvr-grow') %>
    </div>
  </div> <!-- /Container -->
</div> <!-- /Nav-logo -->
<!-- End Logo -->
