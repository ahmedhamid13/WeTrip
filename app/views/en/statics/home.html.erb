<!-- Start Header -->
<% if @destinations.first.image.attached? %>
<div class="header">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" >
            <div class="carousel-item active slider"  style="background-image: url(<%= url_for(@destinations.first.image) %>)">
                <div class="carousel-caption space">
                        <h2><%= @destinations.first.en_name %></h2>
                </div>
                        <div class="carousel-caption">
                            <%= link_to en_destination_path(@destinations.first), class: 'btn ' do %>Book Now<% end %>
                        </div>
            </div>   

            <% @destinations.drop(1).each do |destination| %>

                <div class="carousel-item slider"  style="background-image: url(<%= url_for(destination.image) %>)">
                    <div class="carousel-caption space">
                            <h2><%= destination.en_name %></h2>
                    </div>
                            <div class="carousel-caption">
                                <%= link_to en_destination_path(destination), class: 'btn ' do %>Book Now<% end %>
                            </div>
                </div>   
            <% end %>
        </div>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    </div>
</div>
<% end %>

<!-- End Header -->
<!-- Start Tours -->
<div class="tours text-center">
    <div class="container-fluid">
    <div class="owl-carousel owl-theme owl-tours">
    <% @destinations.each do |destination| %>
        <%= link_to en_destination_path(destination) do %>
        <div class="item">
            <div class="hovereffect">
                <%= (destination.image.attached?) ? image_tag(destination.image, class: 'img-fluid') : image_tag("aldesah.webp", class: 'img-fluid ') %>
                <div class="overlay">
                    <h2><%= destination.en_name %></h2>
                </div>
            </div>
        </div>
        <% end %>
    <% end %>         
    </div>
    </div> <!-- /Container -->
</div> <!-- /Tours -->
<!-- End Tours -->
