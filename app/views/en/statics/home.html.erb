        <%= link_to en_trip_path(trip) do %>
            <div class="item">
            <div class="hovereffect">
            <%= (trip.images.attached?) ? image_tag(trip.images[0], class: 'img-fluid ') : image_tag("harrat.webp", class: 'img-fluid ') %>
            <div class="overlay">
                    <h2 class="font-arabic"><%= trip.en_name %></h2>
