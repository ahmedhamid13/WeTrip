<hr />
<!-- Start Contact -->
<div class="contact">
    <div class="container">
    <div class="row">
        <div class="col-md-6 contact-us info">
        <h2>Contact Us</h2>
        <%= render "en/contacts/form", contact: @contact %>
        </div>
        <div class="col-md-6 info">
        <h2>Blog</h2>
        <div class="row">
            <% if @posts.present? %>
            <% @posts.each do |post| %>
                <div class="col-md-6 m-for-b">
                    <%= (post.image.attached?) ? image_tag(post.image, class: 'img-fluid hvr-glow') : image_tag("aldesah.webp", class: 'img-fluid hvr-glow') %>
                </div>

                <div class="col-md-6 m-for-b">
                    <h5><%= post.en_title.first(20) %></h5>
                    <p><%= post.en_body.first(100) %></p>
                </div>
            <% end %>
            <% end %>
        </div>
        </div>

    </div> <!-- /Row -->
    </div> <!-- /Container -->
</div> <!-- /Contact -->
<!-- End Contact -->