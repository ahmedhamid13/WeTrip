<!-- Start Images -->
<div class="images text-center">
    <div class="container-fluid">
    <h2 class="h1">Trips</h2>
    <div class="owl-carousel owl-theme owl-img">
    <% @trips.each do |trip| %>

        <%= link_to en_trip_path(trip) do %>
            <div class="item">
            <div class="hovereffect">
            <%= (trip.images.attached?) ? image_tag(trip.images[0], class: 'img-fluid ') : image_tag("harrat.webp", class: 'img-fluid ') %>
            <div class="overlay">
                    <h2 class="font-arabic"><%= trip.en_name %></h2>
                    <p> <%= trip.adult_price %> R.S Per Person</p>
                </div>
            </div>
        </div>
        <% end %>
      <% end %>
    </div>
    </div> <!--/Container-fluid -->
</div> <!--/Images -->
<!-- End Images -->
<!-- Start Contact -->
<div class="contact">
    <div class="container">
    <div class="row">
        <div class="col-md-6 contact-us info">
        <h2>Contact Us</h2>
        <%= render "en/contacts/form", contact: @contact %>
        </div>
        <div class="col-md-6 info">
        <h2>Blog</h2>
        <div class="row">
            <% if @posts.present? %>
            <% @posts.each do |post| %>
                <div class="col-md-6 m-for-b">
                    <%= (post.image.attached?) ? image_tag(post.image, class: 'img-fluid hvr-glow') : image_tag("img_no.gif", class: 'img-fluid hvr-glow') %>
                </div>

                <div class="col-md-6 m-for-b">
                    <h5><%= post.en_title.first(20) %></h5>
                    <p><%= post.en_body.first(100) %></p>
                </div>
            <% end %>
            <% end %>
        </div>
        </div>

    </div> <!-- /Row -->
    </div> <!-- /Container -->
</div> <!-- /Contact -->
<!-- End Contact -->