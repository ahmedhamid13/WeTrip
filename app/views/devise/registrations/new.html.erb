
<% if request.path_info.include?('ar') %>
<!-- Start Register -->
<div class="register">
  <div class="container mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row justify-content-center">
    <div class="col-6 rouned shadow p-2 signUp">
      <form>
            <h2>تسجيل جديد</h2>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:الأسم الاول</label>
                  <%= f.text_field :first_name, :placeholder => 'محمد', :class=> 'form-control', :autofocus => true %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:الأسم الثاني</label>
                  <%= f.text_field :last_name, :placeholder => 'صديف', :class=> 'form-control' %>
                </div>
              </div>
            </div> <!--/Row -->
            <div class="form-group">
              <label class="d-block">:النوع</label>
              <%= f.select :gender, options_for_select([["ذكر", "Male"], ["انثي", "Female"]]), {}, :class=> 'form-control' %>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:البريد الإلكتروني</label>
                  <%= f.email_field :email, :placeholder => 'Johndoe@mail.com', :class=> 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:التليفون المحمول</label>
                  <%= f.number_field :mobile, :placeholder => '+0221xxxxxxxx', :class=> 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:كلمة السر</label>
                  <%= f.password_field :password, autocomplete: "new-password" ,:class=>'form-control' , :placeholder => '********' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">:تأكيد كلمة السر</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>'form-control' , :placeholder => '********' %>
                </div>
              </div>
            </div> <!--/Row -->
            <div class="form-group">
              <label class="d-block">:الجنسية</label>
              <%= f.select :nationality, options_for_select([["مصري", "Egyptian"], ["سعودي", "Saudi_Arabia"], ["اخري", "Other"]]), {}, :class=> 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "تسجيل" ,:class=>'btn'%>
            </div>
          <% end %>
      </form>
    </div>
    </div>
  </div> <!-- /Container -->
</div> <!-- /Register -->
<!-- End Register -->



<% else %>
<!-- Start Register -->
<div class="register">
  <div class="container mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row justify-content-center">
    <div class="col-6 rouned shadow p-2 signUp">
      <form>
            <h2>Register</h2>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">First Name:</label>
                  <%= f.text_field :first_name, :placeholder => 'John', :class=> 'form-control', :autofocus => true %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">Last Name:</label>
                  <%= f.text_field :last_name, :placeholder => 'Doe', :class=> 'form-control' %>
                </div>
              </div>
            </div> <!--/Row -->
            <div class="form-group">
              <label class="d-block">Gender:</label>
              <%= f.select :gender, options_for_select([["Male", "male"], ["Female", "female"]]), {}, :class=> 'form-control' %>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">Email Address:</label>
                  <%= f.email_field :email, :placeholder => 'Johndoe@mail.com', :class=> 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">Phone Number:</label>
                  <%= f.number_field :mobile, :placeholder => '+0221xxxxxxxx', :class=> 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">Password:</label>
                  <%= f.password_field :password, autocomplete: "new-password" ,:class=>'form-control' , :placeholder => '********' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="d-block">Confirm Password:</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",:class=>'form-control' , :placeholder => '********' %>
                </div>
              </div>
            </div> <!--/Row -->
            <div class="form-group">
              <label class="d-block">Nationality:</label>
              <%= f.select :nationality, options_for_select([["Egyptian", "Egyptian"], ["Saudi_Arabia", "Saudi_Arabia"], ["Other", "Other"]]), {}, :class=> 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "Register" ,:class=>'btn'%>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
      </form>
    </div>
    </div>
  </div> <!-- /Container -->
</div> <!-- /Register -->
<!-- End Register -->
<% end %>
