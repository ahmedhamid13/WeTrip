<p id="notice"><%= notice %></p>

<h1>Book Trips</h1>

<table>
  <thead>
    <tr>
      <th>Adults</th>
      <th>Children</th>
      <th>Total price</th>
      <th>Is paid</th>
      <th>Trip</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_trips.each do |book_trip| %>
      <tr>
        <td><%= book_trip.adults %></td>
        <td><%= book_trip.children %></td>
        <td><%= book_trip.total_price %></td>
        <td><%= book_trip.is_paid %></td>
        <td><%= book_trip.trip_id %></td>
        <td><%= book_trip.user_id %></td>
        <td><%= link_to 'Show', book_trip %></td>
        <td><%= link_to 'Edit', edit_book_trip_path(book_trip) %></td>
        <td><%= link_to 'Destroy', book_trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

