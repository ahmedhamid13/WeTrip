<!-- Start Tours -->
<% if @destinations.present? %>
    <div class="tours text-center" style="padding-top: 50px">
        <h2 class="h1"><%= t('destinations') %></h2>
        <div class="container-fluid">
            <div class="owl-carousel owl-theme owl-tours">
                <% @destinations.each do |destination| %>
                  <%= link_to ar_destination_path(destination) do %>
                        <div class="item">
                        <div class="hovereffect">
                            <%= (destination.image.attached?) ? image_tag(destination.image, class: 'img-fluid hvr-glow') : image_tag("img_no.gif", class: 'img-fluid hvr-glow') %>
                            <div class="overlay">
                                <h2><%= destination.ar_name %></h2>
                            </div>
                        </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div> <!-- /Container -->
    </div> <!-- /Tours -->
<% end %>
    <!-- End Tours -->
    <!-- Start Images -->
<% if @trips.present? %>
    <div class="images text-center">
      <div class="container-fluid">
        <h2 class="h1"><%= t('trips') %></h2>
        <div class="owl-carousel owl-theme owl-img">
            <% @trips.each do |trip| %>
                <%= link_to ar_trip_path(trip) do %>
                    <div class="item">
                    <div class="hovereffect">
                        <%= (trip.images.attached?) ? image_tag(trip.images[0], class: 'img-fluid hvr-glow') : image_tag("img_no.gif", class: 'img-fluid hvr-glow') %>
                        <div class="overlay">
                            <h2 class="font-arabic"><%= trip.ar_name %></h2>
                            <p><%= trip.adult_price %></p>
                        </div>
                    </div>
                    </div>
                <% end %>
            <% end %>
        </div>
      </div> <!--/Container-fluid -->
    </div> <!--/Images -->
    <!-- End Images -->
<% end %>