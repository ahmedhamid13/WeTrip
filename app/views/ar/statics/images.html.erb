<!-- Start Tours -->
<% if @destinations.present? %>
    <div class="tours text-center" style="padding-top: 50px">
        <h2 class="h1">Destinations</h2>
        <div class="container-fluid">
            <div class="owl-carousel owl-theme owl-tours">
                <% @destinations.each do |destination| %>
                  <%= link_to destination do %>
                        <div class="item">
                        <div class="hovereffect">
                            <%= (destination.image.attached?) ? image_tag(destination.image, class: 'img-fluid hvr-glow') : image_tag("dest/neom.webp", class: 'img-fluid hvr-glow') %>
                            <div class="overlay">
                                <h2><%= destination.name %></h2>
                            </div>
                        </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div> <!-- /Container -->
    </div> <!-- /Tours -->
<% end %>
    <!-- End Tours -->
    <!-- Start Images -->
<% if @trips.present? %>
    <div class="images text-center">
      <div class="container-fluid">
        <h2 class="h1">Trips</h2>
        <div class="owl-carousel owl-theme owl-img">
            <% @trips.each do |trip| %>
                <%= link_to trip do %>
                    <div class="item">
                    <div class="hovereffect">
                        <%= (trip.images.attached?) ? image_tag(trip.images[0], class: 'img-fluid hvr-glow') : image_tag("dest/neom.webp", class: 'img-fluid hvr-glow') %>
                        <div class="overlay">
                            <h2 class="font-arabic"><%= trip.name %></h2>
                            <p><%= trip.adult_price %></p>
                        </div>
                    </div>
                    </div>
                <% end %>
            <% end %>
        </div>
      </div> <!--/Container-fluid -->
    </div> <!--/Images -->
    <!-- End Images -->
<% end %>