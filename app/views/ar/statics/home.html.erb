<!-- Start Images -->
<div class="images text-center">
    <div class="container-fluid">
    <h2 class="h1">الرحلات</h2>
    <div class="owl-carousel owl-theme owl-img">
    <% @trips.each do |trip| %>

        <%= link_to ar_trip_path(trip) do %>
            <div class="item">
            <div class="hovereffect">
            <%= (trip.images.attached?) ? image_tag(trip.images[0], class: 'img-fluid ') : image_tag("aldesah.webp", class: 'img-fluid ') %>
